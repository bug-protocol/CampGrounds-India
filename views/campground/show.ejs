<% layout('layout/boilerplate.ejs') %>

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">

  <!-- Top: Image + Map -->
  <div class="grid grid-cols-1 md:grid-cols-12 gap-8 w-full max-w-7xl px-4 mt-6">

    <!-- Left: Campground Card (image + details + actions) -->
    <div class="md:col-span-6 p-6 rounded-lg shadow-2xl border border-gray-300 bg-white overflow-hidden">
      <h2 class="text-2xl font-semibold text-gray-800"><%= campground.title %></h2>
      <h3 class="text-lg text-gray-600 mt-1"><%= campground.location %></h3>
      <h3 class="text-xl font-bold text-green-600 mt-2">₹<%= campground.price %> / night</h3>

      <!-- Image Carousel -->
      <div class="relative w-full h-[400px] mt-4 rounded-lg overflow-hidden shadow-md">
        <div id="carousel" class="flex transition-transform ease-in-out duration-500 w-full h-full" data-index="0">
          <% campground.image.forEach(img => { %>
            <img src="<%= img.url %>" alt="Campground Image" class="w-full h-full object-cover flex-shrink-0">
          <% }); %>
        </div>
        <button onclick="prevSlide()" class="absolute left-3 top-1/2 -translate-y-1/2 bg-white bg-opacity-75 hover:bg-opacity-100 text-gray-800 p-2 rounded-full">&#10094;</button>
        <button onclick="nextSlide()" class="absolute right-3 top-1/2 -translate-y-1/2 bg-white bg-opacity-75 hover:bg-opacity-100 text-gray-800 p-2 rounded-full">&#10095;</button>
      </div>

      <h3 class="text-md text-gray-500 mt-2">Posted by <span class="font-semibold"><%= campground.user.username %></span></h3>

      <!-- Action Buttons (auth-gated) -->
      <% if (currentUser && campground.user.equals(currentUser._id)) { %>
        <div class="flex flex-col md:flex-row justify-center items-center gap-4 mt-6">
          <a href="/campgrounds/<%= campground._id %>/edit"
             class="min-w-[140px] w-full md:w-auto text-center py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600">
            Edit Camp
          </a>

          <form action="/campgrounds/<%= campground._id %>?-method=DELETE" method="POST">
            <button type="submit"
                    class="min-w-[140px] w-full md:w-auto py-2 px-4 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600">
              Delete Camp
            </button>
          </form>

          <a href="/campgrounds"
             class="min-w-[140px] w-full md:w-auto text-center py-2 px-4 bg-gray-500 text-white font-semibold rounded-lg hover:bg-gray-600">
            All Camps
          </a>
        </div>
      <% } %>
    </div>

    <!-- Right: Map -->
    <div class="md:col-span-6 rounded-lg shadow-2xl border border-gray-300 bg-white p-2 flex items-center justify-center">
      <div id="map" class="w-full h-[400px] rounded-lg shadow-inner bg-gray-50"></div>
    </div>
  </div>

  <!-- Bottom: Reviews (full width) -->
  <div class="w-full max-w-7xl px-4 mt-10">
    <div class="bg-white p-8 rounded-lg shadow-2xl border border-gray-300 space-y-6">

      <h2 class="text-2xl font-semibold text-gray-800">Reviews</h2>

      <!-- Write Review -->
      <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="space-y-4" novalidate id="reviewForm">
        <div>
          <label for="rating" class="block text-gray-700 font-medium">Rating</label>
          <select id="rating" name="review[rating]" required class="w-full border rounded-lg p-2 focus:ring-2 focus:ring-blue-500">
            <option value="">Select Rating</option>
            <option value="5">⭐⭐⭐⭐⭐ - Excellent</option>
            <option value="4">⭐⭐⭐⭐ - Good</option>
            <option value="3">⭐⭐⭐ - Average</option>
            <option value="2">⭐⭐ - Poor</option>
            <option value="1">⭐ - Terrible</option>
          </select>
        </div>

        <div>
          <label for="body" class="block text-gray-700 font-medium">Review</label>
          <textarea id="body" name="review[body]" rows="4" required class="w-full border rounded-lg p-3 focus:ring-2 focus:ring-blue-500" placeholder="Write your review..."></textarea>
        </div>

        <button type="submit" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700">Submit</button>
      </form>

      <!-- Reviews List -->
      <div class="space-y-4">
        <% if (campground.review.length === 0) { %>
          <p class="text-gray-600">No reviews yet. Be the first to write one!</p>
        <% } %>

        <% for (let each_review of campground.review) { %>
          <div class="bg-gray-50 p-4 rounded-lg shadow-md">
            <div class="text-yellow-500 text-lg mb-2">
              <% for (let i = 0; i < each_review.rating; i++) { %> ⭐ <% } %>
            </div>
            <p class="text-sm text-gray-600 mb-1">
              by <%= each_review.user ? each_review.user.username : "Anonymous" %>
            </p>
            <p class="text-gray-700"><%= each_review.body %></p>

            <% if (currentUser && each_review.user && each_review.user._id.equals(currentUser._id)) { %>
              <form action="/campgrounds/<%= campground._id %>/reviews/<%= each_review._id %>?-method=DELETE" method="POST">
                <button type="submit" class="text-sm text-red-500 hover:underline mt-2">Delete</button>
              </form>
            <% } %>
          </div>
        <% } %>
      </div>

    </div>
  </div>
</div>

<!-- Carousel Scripts -->
<script>
  function prevSlide() {
    const carousel = document.getElementById('carousel');
    let index = parseInt(carousel.dataset.index);
    if (index > 0) {
      index--;
      carousel.style.transform = `translateX(-${index * 100}%)`;
      carousel.dataset.index = index;
    }
  }
  function nextSlide() {
    const carousel = document.getElementById('carousel');
    let index = parseInt(carousel.dataset.index);
    const total = carousel.children.length;
    if (index < total - 1) {
      index++;
      carousel.style.transform = `translateX(-${index * 100}%)`;
      carousel.dataset.index = index;
    }
  }

  // Simple client-side validation
  document.getElementById('reviewForm')?.addEventListener('submit', function(e) {
    const rating = document.getElementById('rating').value;
    const body = document.getElementById('body').value.trim();
    if (!rating || !body) {
      e.preventDefault();
      alert('Please provide both a rating and a review before submitting.');
    }
  });
</script>

