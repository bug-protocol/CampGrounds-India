              <div class="w-[250px] flex flex-col items-center">
                <div class="w-[220px] h-[150px] rounded-lg overflow-hidden shadow-md">
                  <img src="<%= eachcamp.image[0].url %>" alt="<%= eachcamp.title %>" class="w-full h-full object-cover">
                </div>
                <h2 class="text-lg font-semibold text-gray-800 mt-2"><%= eachcamp.title %></h2>
              </div>
          
              <!-- Right Section (Description & Link) -->
              <div class="flex-1 flex flex-col justify-between ml-6">
                <p class="text-gray-600 text-sm"><%= eachcamp.description %></p>
                <a href="/campgrounds/<%= eachcamp._id %>" class="text-blue-500 hover:text-blue-700 font-semibold mt-4">
                  View Details â†’
                </a>
              </div>
          
            </li>
          </ul>
          
