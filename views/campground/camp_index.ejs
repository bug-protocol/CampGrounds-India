    </div>
    <% for(let eachcamp of campgrounds){ %>
        <ul class="flex flex-col items-center space-y-6 p-4">
            <li class="flex flex-row bg-white shadow-lg rounded-lg border border-gray-200 w-[600px] p-4">
              
