<%layout('layout/boilerplate.ejs') %>
<!-- Map Section -->
<div id="map" class="w-[90%] h-[500px] mx-auto mt-8 rounded-lg shadow-md border border-gray-300"></div>

<!-- <body> -->
    <h2 class="text-4xl font-bold text-gray-800">These are the Prime camping locations in Lucknow</h2>
