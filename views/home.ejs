<% layout('layout/boilerplate.ejs') %>

<!-- Hero Section -->
<div class="relative w-full h-[90vh] flex items-center justify-center bg-gray-900">
  <!-- Background Image -->
  <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e" 
       alt="Camping Background" 
       class="absolute inset-0 w-full h-full object-cover opacity-70">

  <!-- Overlay -->
  <div class="absolute inset-0 bg-black bg-opacity-40"></div>

  <!-- Hero Content -->
  <div class="relative text-center text-white px-6 max-w-3xl">
    <h1 class="text-5xl md:text-6xl font-bold mb-6">Welcome to Campgrounds India</h1>
    <p class="text-lg md:text-xl mb-8">Discover the most beautiful camping destinations across India. Explore, review, and share your favorite spots.</p>
    <div class="flex justify-center gap-6">
      <a href="/campgrounds" class="bg-green-500 hover:bg-green-600 text-white font-semibold px-6 py-3 rounded-lg shadow-lg transition">
        Explore Camps
      </a>
      <a href="/campgrounds/new" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-3 rounded-lg shadow-lg transition">
        Add a Camp
      </a>
    </div>
  </div>
</div>

<!-- Featured Section -->
<div class="py-16 bg-gray-100">
  <h2 class="text-4xl font-bold text-center text-gray-800 mb-12">Featured Campgrounds</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 max-w-6xl mx-auto px-6">
    <!-- Card 1 -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:scale-105 transition-transform">
      <img src="https://images.unsplash.com/photo-1501785888041-af3ef285b470" alt="Mountains" class="w-full h-56 object-cover">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-800">Himalayan Escapes</h3>
        <p class="text-gray-600 mt-2">Experience serene mountain camping with breathtaking views.</p>
        <a href="/campgrounds" class="mt-4 inline-block text-green-600 font-semibold hover:underline">View More →</a>
      </div>
    </div>

    <!-- Card 2 -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:scale-105 transition-transform">
      <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e" alt="Beach Camping" class="w-full h-56 object-cover">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-800">Beachside Camps</h3>
        <p class="text-gray-600 mt-2">Relax under the stars by the sound of waves at India’s pristine beaches.</p>
        <a href="/campgrounds" class="mt-4 inline-block text-green-600 font-semibold hover:underline">View More →</a>
      </div>
    </div>

    <!-- Card 3 -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:scale-105 transition-transform">
      <img src="https://images.unsplash.com/photo-1500530855697-b586d89ba3ee" alt="Forest" class="w-full h-56 object-cover">
      <div class="p-6">
        <h3 class="text-xl font-semibold text-gray-800">Forest Retreats</h3>
        <p class="text-gray-600 mt-2">Reconnect with nature in lush green forests and wildlife sanctuaries.</p>
        <a href="/campgrounds" class="mt-4 inline-block text-green-600 font-semibold hover:underline">View More →</a>
      </div>
    </div>
  </div>
</div>

<!-- Call to Action -->
<div class="py-20 bg-green-600 text-center text-white">
  <h2 class="text-3xl md:text-4xl font-bold mb-4">Start Your Camping Journey Today</h2>
  <p class="text-lg mb-8">Find your next adventure and share it with the world.</p>
  <a href="/campgrounds" class="bg-white text-green-600 font-semibold px-8 py-3 rounded-lg shadow-lg hover:bg-gray-100 transition">
    Explore Now
  </a>
</div>
