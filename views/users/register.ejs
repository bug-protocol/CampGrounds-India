<% layout('layout/boilerplate.ejs') %>

<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-6 w-[400px]">
    <h1 class="text-2xl font-bold text-gray-800 text-center mb-4">Register</h1>

    <form id="registerForm" action="/register" method="POST" class="space-y-4" novalidate>
      <!-- Username -->
      <div>
        <label for="username" class="text-lg font-medium text-gray-700">Username</label>
        <input type="text" id="username" name="username"
               class="validate-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
               required
               placeholder="Enter your username">
        <span class="text-red-500 text-sm hidden">Username is required.</span>
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="text-lg font-medium text-gray-700">Email</label>
        <input type="email" id="email" name="email"
               class="validate-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
               required
               placeholder="Enter your email">
        <span class="text-red-500 text-sm hidden">Valid email is required.</span>
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="text-lg font-medium text-gray-700">Password</label>
        <input type="password" id="password" name="password"
               class="validate-input w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
               required
               placeholder="Create a password">
        <span class="text-red-500 text-sm hidden">Password is required.</span>
      </div>

      <!-- Buttons -->
      <div class="flex justify-between items-center mt-4">
        <button type="submit"
                class="py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300">
          Register
        </button>

        <a href="/login"
           class="py-2 px-4 bg-gray-300 text-gray-800 font-semibold rounded-lg hover:bg-gray-400 focus:outline-none focus:ring-2 focus:ring-gray-400">
          Login
        </a>
      </div>
    </form>
  </div>
</div>

<script>
  const form = document.getElementById('registerForm');
  const inputs = form.querySelectorAll('.validate-input');

  form.addEventListener('submit', function (e) {
    let isValid = true;

    inputs.forEach(input => {
      const parentDiv = input.closest('div');
      const errorSpan = parentDiv.querySelector('span.text-red-500');

      if (!input.checkValidity()) {
        input.classList.add('border-red-500');
        input.classList.remove('border-gray-300', 'border-green-500');
        if (errorSpan) errorSpan.classList.remove('hidden');
        isValid = false;
      } else {
        input.classList.remove('border-red-500');
        input.classList.add('border-green-500');
        input.classList.add('border');
        if (errorSpan) errorSpan.classList.add('hidden');
      }
    });

    if (!isValid) {
      e.preventDefault();
    }
  });

  inputs.forEach(input => {
    input.addEventListener('input', () => {
      const parentDiv = input.closest('div');
      const errorSpan = parentDiv.querySelector('span.text-red-500');

      if (!input.checkValidity()) {
        input.classList.add('border-red-500');
        input.classList.remove('border-gray-300', 'border-green-500');
        if (errorSpan) errorSpan.classList.remove('hidden');
      } else {
        input.classList.remove('border-red-500');
        input.classList.add('border-green-500');
        input.classList.add('border');
        if (errorSpan) errorSpan.classList.add('hidden');
      }
    });
  });
</script>
